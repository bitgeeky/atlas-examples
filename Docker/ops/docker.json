{
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "ACCESS_KEY_HERE",
        "secret_key": "SECRET_KEY_HERE",
        "region": "us-east-1",
        "source_ami": "ami-9a562df2",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "docker {{timestamp}}"
    }],
    "push": {
      "name": "<username>/docker"
    },
    "provisioners": [
    {   
        "type": "file",
        "source": "/packer/app",
        "destination": "/tmp"
    },
    {   
        "type": "shell",
        "inline": [
            "mkdir /home/ubuntu/site",
            "sudo mv /tmp/app/* /home/ubuntu/site/"
        ]
    },
    {
        "type": "shell",
        "script": "scripts/install-docker.sh"
    }],
    "post-processors": [
      {
        "type": "atlas",
        "artifact": "<username>/docker",
        "artifact_type": "aws.ami",
        "metadata": {
          "created_at": "{{timestamp}}"
        }
      }
    ]
}
